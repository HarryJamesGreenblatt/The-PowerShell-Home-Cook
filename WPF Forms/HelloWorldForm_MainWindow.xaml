<Window x:Class="HelloWorldForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldForm"
        mc:Ignorable="d"
        Title="Hello World Form" Height="322" Width="321" Background="#FFBB8B22">
    <Grid Margin="35,22,35,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="48*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="lbl_HelloWorld" HorizontalAlignment="Left" Margin="22,60,0,0" TextWrapping="Wrap" Text="Hello World" VerticalAlignment="Top" Width="206" Cursor="Arrow" Background="#00BB8B22" Height="50" FontSize="36" Grid.ColumnSpan="2" Foreground="#FFFBFBFB" BorderThickness="0,0,0,0" ClipToBounds="True"/>
        <Button x:Name="btn_Toggle" Content="Toggle" HorizontalAlignment="Left" Height="35" Margin="93,158,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="64" Panel.ZIndex="99" FontSize="18
                " Opacity="1" BorderBrush="White" Background="#00CCCCCC" Foreground="#FFECECEC"/>

    </Grid>
</Window>
